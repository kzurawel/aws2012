/[if lt IE 7] <html lang="en" class="no-js ie6">
/[if IE 7]   <html lang="en" class="no-js ie7">
/[if IE 8]   <html lang="en" class="no-js ie8">
/[if gt IE 8]
  %html.no-js(lang="en")
%head
  %meta(charset="utf-8")
  - if @description
    %meta(name="description" content=@description)
  - if @keywords
    %meta(name="keywords" content=@keywords)
  %title= @title
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")
  %link(href="/css/base.css" media="screen" rel="stylesheet")
  %link(href="/css/full.css" media="screen and (min-width: 720px)" rel="stylesheet")
  %link(href="/articles.xml" rel="alternate" type="application/atom+xml")
  %script(src="/js/libs/modernizr-2.0.6.min.js")
%body(class="#{body_class}")
  %a#top
  %header
    %a(href="/")
      %h1 Arbor <span>web solutions</span>
    - if body_class == 'home'
      %h2 We bring beautiful, accessible websites to life.
      %h3 (That includes yours. <a href="contact">Get in touch.</a>)
    
    %a#contactbutton(href="/contact") Contact
    %a#skiplink(href="#navlinks") Menu
  = yield

  %footer
    - if body_class == 'article'
      %section
        = random_article_summaries(random_articles(@page, 3))
      %a#navlinks(title="navlinks")
    %nav
      %ul
        %li
          %a(href="/portfolio" class="#{navlink_current('portfolio')}") Portfolio
        %li
          %a(href="/services" class="#{navlink_current('services')}") Services
        %li
          %a(href="/articles" class="#{navlink_current('articles')}") Articles
        %li
          %a(href="/journal" class="#{navlink_current('journal')}") Journal
        %li
          %a(href="/elsewhere" class="#{navlink_current('elsewhere')}") Elsewhere
        %li
          %a(href="/contact" class="#{navlink_current('contact')}") Contact
        %li#backtotop
          %a(href="#top") Back to top
    .foottext
      %a.logo(href="/") Arbor Web Solutions
      %p
        %span.copyright Copyright &copy;2011 Arbor Web Solutions.
        %span.contact
          Contact Us: 
          %a(href="mailto:hello@arborwebsolutions.com") hello@arborwebsolutions.com
  %script(src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
  %script
    window.jQuery || document.write('<script src="/js/libs/jquery-1.7.1.min.js"><\/script>');
  %script(src="/js/libs/jquery.isotope.min.js")
  %script(src="/js/script.js")
