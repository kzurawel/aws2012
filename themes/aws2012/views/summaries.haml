- unless pages.empty?
  - even = true
  - pages.each do |page|
    - even = !even
    %article{:class => even ? 'even' : 'odd'}
      %div
        %h3
          %a(href="#{page.abspath}")= page.heading
        %time(datetime="#{page.date}" pubdate)
          %span= format_date(page.date)
        - if page.summary.nil? || page.summary.empty?
          ~ page.body(self)
        - else
          ~ page.summary
          %a(href="#{page.abspath}")= page.read_more
